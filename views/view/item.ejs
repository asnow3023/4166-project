<%- include('../partials/header.ejs') %>  

<div class="container">
    <div class="item-img-container">
        <div class="item-img-main">
            <img src="<%= item.image %>" class="item-img" alt="item image">
        </div>
    </div>

    <div class="item-container">
        <div class="description-container">
            <h2 class="title"><%= item.title %></h2>
            <div class="condition-container">
                <p class="condition-text">Condition: </p>
                <p class="condition-value"><%= item.condition %></p>
            </div>
            <div class="seller-container">
                <p>Seller: </p>
                <p class="seller-value"><%= item.seller %></p>
            </div>
            <div class="offer-container">
                <div class="price-block">
                    <p class="price-label">Starting Price: </p>
                    <p class="price-value">$<%= item.price %> |</p>  
                    <p class="offer-value"><%= item.totalOffers %></p>
                    <p class="offer-label"> Offers</p>
                </div>
            </div>
            <div class="detail-container">
                <p>Item Details: </p>
                <p><%= item.details %></p>
            </div>
            <% if(item.active == true) {%>
                <div>
                    <form action="/items/<%= item._id %>/offers" method="POST" enctype="application/x-www-form-urlencoded">
                        <div class="row">
                            <div class="col-8">
                                <input type="number" id="amount" name="amount" class="form-control" step="0.01" placeholder="Enter Offer Amount">
                            </div>
                            <div class="col-2">
                                <input type="submit" value="Submit Offer" class="btn btn-primary">
                            </div>
                        </div>
                    </form>
                </div>
               <% if(item.totalOffers > 0){ %>
                    <div>
                        <p class="text-danger">Current Highest Offer: $<%= item.highestOffer %></p>
                    </div>
                <%}%>
            <%} else {%>
                    <p class="text-danger">Unfortunately, this item is no longer available.</p>
            <%}%>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %> 