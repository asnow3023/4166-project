<%- include('../partials/header.ejs') %> 
<div class="container">
    <div class="listing-title">
        <h3>My Listings</h3>
    </div>
    <div class="listing-container">
        <div class="item-container">
            <div class="list-header">
                <p class="item-header">Item</p>
                <p class="status-header">Status</p>
                <p class="action-header">Action</p>
            </div>
                <% if(items.length){%>
                    <%items.forEach(item => {%>
                            <div class="item-body"> 
                                <a href="/items/<%= item._id %>" class="item-title" ><%=item.title%></a>
                                <%if(item.active == true) {%>
                                    <p class="item-status">active</p>
                                <%} else {%>
                                    <p class="item-status">inactive</p>
                                <%}%>
                                <form class="item-button-container">
                                    <button type="submit" class="btn-edit" formmethod="GET" formaction="/items/<%= item._id %>/edit"></button>
                                    <button type="submit" class="btn-delete" formmethod="POST" formaction="/items/<%= item._id %>?_method=DELETE"></button>
                                    <button type="submit" class="btn btn-primary btn-view-offer" formmethod="GET" formaction="/items/<%= item._id %>/offers">View Offers</button>
                                </form>
                            </div>
                    <%});%>
                <%} else { %>
                    <div class="content">
                        <p class="search-message">You have not listed any items yet</p>
                    </div>
                <% } %>
        </div>
    </div>
    <div class="listing-title">
        <h3>My Offers</h3>
    </div>
    <div class="listing-container">
        <div class="item-container">
            <div class="list-header">
                <p class="item-header">Item</p>
                <p class="status-header">Status</p>
                <p class="amount-header">Amount</p>
            </div>
                <% if(offers.length){%>
                    <%offers.forEach(offer => {%>
                            <div class="item-body"> 
                                <a href="/items/<%= offer.itemId %>" class="item-title" ><%= offer.title %></a>
                                <%if(offer.status == "pending") {%>
                                    <p class="item-status">pending</p>
                                <%} else if (offer.status == "accepted") {%>
                                    <p class="item-status">accepted</p>
                                <%} else if (offer.status == "rejected") {%>
                                    <p class="item-status">rejected</p>
                                <%}%>
                                    <p class="offer-amount">$<%= offer.amount %></p>
                            </div>
                    <%})%>
                <%} else { %>
                    <div class="content">
                        <p class="search-message">You have not listed any items yet</p>
                    </div>
                <% } %>
        </div>
    </div>
</div>
</div>
<%- include('../partials/footer.ejs') %>  
